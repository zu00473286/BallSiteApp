<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp">

    <androidx.cardview.widget.CardView
        android:layout_width="384sp"
        android:layout_height="145sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145sp"
            android:padding="16sp">


            <ImageView
                android:id="@+id/site_icon"
                android:layout_width="wrap_content"
                android:layout_height="117sp"
                android:layout_alignParentLeft="false"
                android:layout_marginRight="16sp"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/sitename_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/site_icon"
                android:text="場地編號:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/site_name"
                android:layout_width="93sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13sp"
                android:layout_marginLeft="123sp"
                android:layout_toEndOf="@+id/sitename_id"
                android:layout_toRightOf="@+id/site_icon"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/siteprice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sitename_id"
                android:layout_marginTop="29sp"
                android:layout_toRightOf="@+id/site_icon"
                android:text="場地價格:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/site_price"
                android:layout_width="87sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/site_name"
                android:layout_marginStart="13sp"
                android:layout_marginLeft="129sp"
                android:layout_marginTop="34sp"
                android:layout_toEndOf="@+id/siteprice_id"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>