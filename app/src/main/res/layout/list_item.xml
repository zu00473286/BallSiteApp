<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="384dp"
        android:layout_height="145dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:padding="16dp">


            <ImageView
                android:id="@+id/site_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="16dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/sitename_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/site_icon"
                android:layout_toRightOf="@+id/site_icon"
                android:text="場地編號:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/site_name"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/sitename_id"
                android:layout_toRightOf="@+id/site_icon"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/siteprice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sitename_id"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@+id/site_icon"
                android:layout_toRightOf="@+id/site_icon"
                android:text="場地價格:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/site_price"
                android:layout_width="122dp"
                android:layout_height="41dp"
                android:layout_below="@+id/site_name"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/siteprice_id"
                android:textSize="20dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>